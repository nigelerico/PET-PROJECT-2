<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<android.support.v7.widget.CardView
    android:id="@+id/cv_hotel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="4dp"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/tv_nama_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imageView"
            android:text="Nama Hotel"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <RatingBar
            android:id="@+id/tv_rating"
            android:progressBackgroundTint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_nama_hotel"
            android:layout_toRightOf="@id/imageView"/>
        <!--<TextView-->
            <!--android:id="@+id/tv_rating"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/tv_nama_hotel"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_toRightOf="@id/imageView"-->
            <!--android:text="Rating"-->
            <!--android:textSize="10sp"-->
            <!--android:textColor="@color/black" />-->

        <ImageView
            android:id="@+id/ic_lokasi"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_rating"/>
        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rating"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/ic_lokasi"
            android:text="Alamat"
            android:textSize="10sp"
            android:textColor="@color/black" />

        <View
            android:id="@+id/garis1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/imageView"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/iron" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/garis1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"

            android:text="Harga Kamar"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_permalam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"

            android:text="per malam"
            android:textSize="10sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_harga_kamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/garis1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="Rp 2000"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:textColor="@android:color/holo_orange_dark" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

</LinearLayout>